
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/Register.css")" rel="stylesheet" type="text/css" />
    <title>Bookstore - Register</title>
</head>
<body>
    <div class="container">
        <div class="image">
            <img src="https://raw.githubusercontent.com/victorsingha/Bookstore/main/Bookstore/App_Data/bookstore.png" />
            <p class="tag">ONLINE BOOK SHOPPING</p>
        </div>

        <div class="rightbox">
            <form class="rightcontainer" method="post" action="@Url.Action("RegisterUser", "Account")">
                <div class="title">
                    <p class="login" onclick="@("window.location.href='" + @Url.Action("Login", "Account") + "'");">LOGIN</p>
                    <p class="signup" onclick="@("window.location.href='" + @Url.Action("Register", "Account") + "'");">SIGNUP</p>
                </div>

                <div>
                    <p>Full Name</p>
                    <input name="fullname" />
                </div>

                <div>
                    <p>Email Id</p>
                    <input name="email" type="email" />
                </div>

                <div>
                    <p>Password</p>
                    <input name="password" type="password" />
                </div>

                <div>
                    <p>Mobile Number</p>
                    <input name="mobile"/>
                </div>


                <button type="submit" value="register" name="submit" class="btnLogin">Register</button>



            </form>

        </div>
        </div>
</body>
</html>

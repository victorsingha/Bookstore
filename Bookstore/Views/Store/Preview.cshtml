
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Header.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Prev.css")" rel="stylesheet" type="text/css" />
    <title>@Model.Title by @Model.Author - BookStore</title>
</head>
<body>
    @{
        Html.RenderPartial("Header");
    }
    <div class="main">
        <div class="leftbox">
            <div class="imagecontainer">
                <img class="image" src="@Model.ImageUrl" />
            </div>
            <div class="buttoncontainer">
                <button class="btn_addtobag">ADD TO BAG</button>
                <button class="btn_wishlist">❤ WISHLIST</button>
            </div>
        </div>
        <div class="rightbox">
            <div class="details">
                <p class="name">@Model.Title</p>
                <p class="author">by @Model.Author</p>
                <p><span class="rating">@Model.Rating *</span> <span class="reviews">(@Model.ReviewCount)</span></p>
                <p><span class="discount">Rs.@Model.Discount</span>  <span class="original">Rs.@Model.Price</span></p>
            </div>


            <hr class="solid">

            <p class="bookdetail">Book Detail</p>
            <p class="description">
                @Model.Description
            </p>


            <hr class="solid">

            <p class="customerfeedback">Customer Feedback</p>
            <div class="feedbackform">
                <p>Overall Rating</p>
                <p><span>⭐</span><span>⭐</span><span>⭐</span><span>⭐</span><span>⭐</span></p>
                <textarea rows="4" cols="80"></textarea><br />
                <button>Submit</button>
            </div>

        </div>
    </div>
   
   
   
</body>
</html>
